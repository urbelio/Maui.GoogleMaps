<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGoogleMapSample.LabelView"
             AnchorX="0.5"
             AnchorY="1"
             WidthRequest="120"
             x:Name="Container">
    <VerticalStackLayout>
        <Border Stroke="#c41000"
                StrokeThickness="2"
                BackgroundColor="#f5d105"
                Padding="5">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5"/>
            </Border.StrokeShape>
            <Label x:Name="LabelContainer"
                   FontSize="12"
                   BackgroundColor="#f5d105"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </Border>
        <Image Source="flames"
               Aspect="AspectFit"
               HeightRequest="50"
               WidthRequest="50"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,5,0,0"/>
    </VerticalStackLayout>
</ContentView>

